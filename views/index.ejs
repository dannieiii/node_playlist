<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Playlist</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <h1>My Playlist</h1>
   
    <div class="add-song-container">
        <a href="/add" class="add-song-button">Add New Song</a>
    </div>

    <div class="song-container">
        <% songs.forEach(song => { %>
        <div class="song-card">
            <div class="song-image">
                <a href="/song/<%= song.id %>">
                    <img src="<%= song.image %>" alt="<%= song.title %>">
                </a>
            </div>
            <div class="song-info">
                <h2><a href="/song/<%= song.id %>"><%= song.title %></a></h2>
                <p>by <%= song.artist %></p>
                
                <div class="audio-container">
                    <audio controls>
                        <source src="<%= song.file_path %>" type="audio/mpeg">
                        Your browser does not support the audio tag.
                    </audio>
                    <div class="song-options">
                        <form action="/edit/<%= song.id %>" method="GET" class="icon-form">
                            <button type="submit" class="edit-icon" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                        </form>
                        <form action="/delete/<%= song.id %>" method="POST" class="icon-form">
                            <button type="submit" class="delete-icon" title="Delete" onclick="return confirm('Are you sure you want to delete this song?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
                
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</body>
</html>